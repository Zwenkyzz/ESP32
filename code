#include <SPI.h>
#include <MFRC522.h>
#include <Arduino.h>

// Definition de Pins
#define RST_PIN 3    
#define SS_PIN  4    

MFRC522 mfrc522(SS_PIN, RST_PIN);  

void setup() {
  Serial.begin(115200);
  delay(1000);  
  Serial.println("ðŸ”„ Initialisation du lecteur RFID...");

  SPI.begin();           // Initialisation bus SPI
  mfrc522.PCD_Init();    // Initialisation module RC522

  Serial.println("Lecteur RFID prÃªt");
}

void loop() {
  // VÃ©rifie si une carte est prÃ©sente
  if (!mfrc522.PICC_IsNewCardPresent() || !mfrc522.PICC_ReadCardSerial()) {
    Serial.println(" Carte non dÃ©tectÃ©e ");
    delay(500);  
    return;
  }

  // Affiche l'UID de la carte dÃ©tectÃ©e
  Serial.print("ðŸ†” Carte dÃ©tectÃ©e, UID : ");
  for (byte i = 0; i < mfrc522.uid.size; i++) {
    if (mfrc522.uid.uidByte[i] < 0x10) Serial.print("0"); 
    Serial.print(mfrc522.uid.uidByte[i], HEX);
    Serial.print(" ");
  }
  Serial.println();

  
  mfrc522.PICC_HaltA();
  delay(1000);  
}
